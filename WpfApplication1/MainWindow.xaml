<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label Content="FirstName: "/>
            <TextBox x:Name="textBox1" Text="{Binding Path=FirstName, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120"/>
            <Label Content="SecondName: "/>
            <TextBox x:Name="textBox2" Text="{Binding Path=LastName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="125"/>
            <Label Content="FullName: "/>
            <TextBox x:Name="textBox3" Text="{Binding Path=FullName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120"/>
        </StackPanel>
        
    </Grid>
</Window>
